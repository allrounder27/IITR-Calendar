<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.iitrtimetable">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Monday"
            android:label="Monday"
            android:parentActivityName=".Timetable">
            <meta-data
                android:name="android.support.TIMETABLE"
                android:value=".ui.login.Monday" />

        </activity>
        <activity
            android:name=".Timetable"
            android:label="Timetable"
            android:parentActivityName=".SecondActivity">
            <meta-data
                android:name="android.support.SECOND_ACTIVITY"
                android:value=".ui.login.Timetable" />
        </activity>
        <activity
            android:name=".SecondActivity"
            android:label="@string/activity2_name"
            android:parentActivityName=".ui.login.LoginActivity">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ui.login.LoginActivity" />
        </activity>
        <activity
            android:name=".ui.login.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>